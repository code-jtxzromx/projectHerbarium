<Page x:Class="prototypeHerbarium.pageAuditTrailing"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prototypeHerbarium"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="pageAuditTrailing">

    <DockPanel>
        <Grid DockPanel.Dock="Top" Margin="2" Height="35">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>

            <WrapPanel Grid.Column="2" Margin="5">
                <Label Content="Search: "/>
                <TextBox Width="135"/>
            </WrapPanel>
        </Grid>
        <DataGrid Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Timestamp" Width="*" />
                <DataGridTextColumn Header="User Involved" Width="*" />
                <DataGridTextColumn Header="Transaction" Width="2*" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Page>
