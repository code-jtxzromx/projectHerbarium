    <!-- Styles used in this Application -->
    <Style x:Key="mainWindow" TargetType="{x:Type Window}">
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="MinHeight" Value="46"/>
        <!--CaptionHeight + ResizeBorderThickness * 2-->
        <Setter Property="Background" Value="Yellow"/>
        <Setter Property="BorderBrush" Value="Green"/>
        <Setter Property="BorderThickness" Value="5"/>
        <Setter Property="Foreground" Value="DarkRed"/>
        <Setter Property="Template" Value="{StaticResource WindowTemplate}"/>
    </Style>
    <Style x:Key="menuButton" TargetType="Button">
        <Setter Property="Height"                       Value="35" />
        <Setter Property="Margin"                       Value="1" />
        <Setter Property="Padding"                      Value="10 5" />
        <Setter Property="Background"                   Value="#42FFFFFF" />
        <Setter Property="BorderBrush"                  Value="#00000000" />
        <Setter Property="FontWeight"                   Value="Medium" />
        <Setter Property="FontSize"                     Value="14" />
        <Setter Property="HorizontalContentAlignment"   Value="Left" />
    </Style>
    <Style x:Key="subMenuButton" TargetType="Button">
        <Setter Property="Height"                       Value="35" />
        <Setter Property="Margin"                       Value="1 0" />
        <Setter Property="Padding"                      Value="30 5 10 5" />
        <Setter Property="Background"                   Value="#65FFFFFF" />
        <Setter Property="BorderBrush"                  Value="#00000000" />
        <Setter Property="HorizontalContentAlignment"   Value="Left" />
    </Style>
    <Style x:Key="subL3MenuButton" TargetType="Button">
        <Setter Property="Height"                       Value="35" />
        <Setter Property="Margin"                       Value="1 0" />
        <Setter Property="Padding"                      Value="50 5" />
        <Setter Property="Background"                   Value="#B5FFFFFF" />
        <Setter Property="BorderBrush"                  Value="#00000000" />
        <Setter Property="HorizontalContentAlignment"   Value="Left" />
    </Style>
</ResourceDictionary>