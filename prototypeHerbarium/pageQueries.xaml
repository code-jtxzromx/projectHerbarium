<Page x:Class="prototypeHerbarium.pageQueries"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prototypeHerbarium"
      xmlns:control="http://metro.mahapps.com/winfx/xaml/controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="pageQueries">

    <DockPanel>
        <control:MetroAnimatedSingleRowTabControl control:TabControlHelper.Underlined="TabPanel" Margin="5" Background="Transparent">
            <control:MetroTabItem control:ControlsHelper.HeaderFontSize="20" Header=" TAXON SPECIES " >
                <local:viewQTaxonSpecies />
            </control:MetroTabItem>
            <control:MetroTabItem control:ControlsHelper.HeaderFontSize="20" Header=" HERBARIUM SHEET " />
            <control:MetroTabItem control:ControlsHelper.HeaderFontSize="20" Header=" COLLECTORS " />
            <control:MetroTabItem control:ControlsHelper.HeaderFontSize="20" Header=" PLANT LOANS " />
        </control:MetroAnimatedSingleRowTabControl>
    </DockPanel>
</Page>
